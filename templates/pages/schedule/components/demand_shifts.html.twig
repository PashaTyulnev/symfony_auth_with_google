{% for demandShift in demandShifts %}

    <div data-schedule-week-target="demandShiftDraggable"
         data-action="dragstart->schedule-week#onDragStart
                      dragend->schedule-week#onDragEnd"
         draggable="true"
         data-demand-shift-uri="{{ demandShift['@id'] }}"
         class="draggable rounded-2xl p-4 flex flex-col gap-2 min-w-[240px] shadow-sm hover:shadow-lg transition-all duration-300 ease-out border border-white/10 backdrop-blur-sm"
         style="background: linear-gradient(135deg, {{ demandShift.color }}, {{ demandShift.color }}dd);">

        <div class="flex flex-col gap-0.5">
            <span class="text-sm font-semibold text-white tracking-tight">{{ demandShift.name }}</span>
            <span class="text-[11px] text-white/70 font-medium">
            {{ demandShift.amountEmployees }} MA • {{ demandShift.requiredQualification.title }}
        </span>
            <span class="text-[11px] text-white/60 font-medium leaveInMini">
            {{ demandShift.timeFrom | date('H:i') }} – {{ demandShift.timeTo | date('H:i') }}
        </span>
        </div>

        <div class="flex justify-between gap-1 pt-2 border-t border-white/10">
            {% set days = {
                'Mo': demandShift.onMonday,
                'Di': demandShift.onTuesday,
                'Mi': demandShift.onWednesday,
                'Do': demandShift.onThursday,
                'Fr': demandShift.onFriday,
                'Sa': demandShift.onSaturday,
                'So': demandShift.onSunday
            } %}

            {% for label, value in days %}
                <div class="flex flex-col items-center gap-0.5">
                    <span class="text-[9px] font-semibold text-white/80 uppercase tracking-wide">{{ label }}</span>

                    {% if value == true %}
                        <div class="w-6 h-6 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center">
                            {{ ux_icon('lucide:check', { class: 'h-3.5 w-3.5 text-white' }) }}
                        </div>
                    {% else %}
                        <div class="w-6 h-6 rounded-full bg-black/10 flex items-center justify-center">
                            {{ ux_icon('lucide:minus', { class: 'h-2.5 w-2.5 text-white/40' }) }}
                        </div>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endfor %}
