{% extends 'base.html.twig' %}

{% block body %}
    <div class="p-8 max-w-7xl mx-auto">
        {# Header mit elegantem Stil #}
        <div class="mb-10 animate-fade-in">
            <h2 class="text-3xl font-light text-gray-900 dark:text-white mb-3">Einstellungen</h2>
            <p class="text-base font-light text-gray-500 dark:text-gray-400 max-w-2xl">
                Verwalten Sie Ihre Kontodaten, Sicherheitseinstellungen und Benachrichtigungspräferenzen.
            </p>
        </div>

        {# Grid mit modernisierten Karten #}
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">

            {# Zwei-Faktor-Auth Karte #}
            <a href="{{ path('app_register_google_auth') }}"
               class="group relative block p-8 rounded-3xl shadow-xl border border-gray-200/50 dark:border-gray-700/50
                      bg-white/80 dark:bg-gray-800/50 backdrop-blur-sm
                      hover:shadow-2xl hover:scale-[1.02] hover:border-blue-500/50 dark:hover:border-blue-400/50
                      transition-all duration-300 overflow-hidden animate-slide-up"
               style="animation-delay: 0ms">

                {# Gradient overlay on hover #}
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500/0 to-purple-500/0 group-hover:from-blue-500/5 group-hover:to-purple-500/5 transition-all duration-500"></div>

                <div class="relative z-10">
                    <div class="flex items-start justify-between mb-6">
                        <div class="p-3 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                            {{ ux_icon('lucide:shield-check', {
                                class: 'w-7 h-7 text-white'
                            }) }}
                        </div>
                        <span class="text-xs font-medium px-3 py-1.5 bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-400 rounded-full">
                            Empfohlen
                        </span>
                    </div>

                    <h3 class="text-xl font-medium text-gray-900 dark:text-white mb-3 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
                        Zwei-Faktor-Auth.
                    </h3>
                    <p class="text-sm font-light text-gray-600 dark:text-gray-400 leading-relaxed">
                        Aktivieren Sie Google Authenticator für zusätzlichen Schutz Ihres Kontos.
                    </p>

                    <div class="mt-6 flex items-center text-blue-600 dark:text-blue-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <span class="text-sm font-medium">Konfigurieren</span>
                        {{ ux_icon('lucide:arrow-right', {
                            class: 'w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform'
                        }) }}
                    </div>
                </div>
            </a>

            {# Passwort ändern Karte #}
            <a href="#"
               class="group relative block p-8 rounded-3xl shadow-xl border border-gray-200/50 dark:border-gray-700/50
                      bg-white/80 dark:bg-gray-800/50 backdrop-blur-sm
                      hover:shadow-2xl hover:scale-[1.02] hover:border-amber-500/50 dark:hover:border-amber-400/50
                      transition-all duration-300 overflow-hidden animate-slide-up"
               style="animation-delay: 100ms">

                <div class="absolute inset-0 bg-gradient-to-br from-amber-500/0 to-orange-500/0 group-hover:from-amber-500/5 group-hover:to-orange-500/5 transition-all duration-500"></div>

                <div class="relative z-10">
                    <div class="flex items-start justify-between mb-6">
                        <div class="p-3 bg-gradient-to-br from-amber-500 to-amber-600 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                            {{ ux_icon('lucide:key-round', {
                                class: 'w-7 h-7 text-white'
                            }) }}
                        </div>
                    </div>

                    <h3 class="text-xl font-medium text-gray-900 dark:text-white mb-3 group-hover:text-amber-600 dark:group-hover:text-amber-400 transition-colors">
                        Passwort ändern
                    </h3>
                    <p class="text-sm font-light text-gray-600 dark:text-gray-400 leading-relaxed">
                        Aktualisieren Sie Ihr Passwort regelmäßig für optimale Sicherheit.
                    </p>

                    <div class="mt-6 flex items-center text-amber-600 dark:text-amber-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <span class="text-sm font-medium">Ändern</span>
                        {{ ux_icon('lucide:arrow-right', {
                            class: 'w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform'
                        }) }}
                    </div>
                </div>
            </a>

            {# Benachrichtigungen Karte #}
            <a href="#"
               class="group relative block p-8 rounded-3xl shadow-xl border border-gray-200/50 dark:border-gray-700/50
                      bg-white/80 dark:bg-gray-800/50 backdrop-blur-sm
                      hover:shadow-2xl hover:scale-[1.02] hover:border-purple-500/50 dark:hover:border-purple-400/50
                      transition-all duration-300 overflow-hidden animate-slide-up"
               style="animation-delay: 200ms">

                <div class="absolute inset-0 bg-gradient-to-br from-purple-500/0 to-pink-500/0 group-hover:from-purple-500/5 group-hover:to-pink-500/5 transition-all duration-500"></div>

                <div class="relative z-10">
                    <div class="flex items-start justify-between mb-6">
                        <div class="p-3 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                            {{ ux_icon('lucide:bell-ring', {
                                class: 'w-7 h-7 text-white'
                            }) }}
                        </div>
                        <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse"></div>
                    </div>

                    <h3 class="text-xl font-medium text-gray-900 dark:text-white mb-3 group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
                        Benachrichtigungen
                    </h3>
                    <p class="text-sm font-light text-gray-600 dark:text-gray-400 leading-relaxed">
                        Verwalten Sie Ihre Benachrichtigungen für Einsätze und Ereignisse.
                    </p>

                    <div class="mt-6 flex items-center text-purple-600 dark:text-purple-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <span class="text-sm font-medium">Anpassen</span>
                        {{ ux_icon('lucide:arrow-right', {
                            class: 'w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform'
                        }) }}
                    </div>
                </div>
            </a>

            {# Persönliche Daten Karte #}
            <a href="#"
               class="group relative block p-8 rounded-3xl shadow-xl border border-gray-200/50 dark:border-gray-700/50
                      bg-white/80 dark:bg-gray-800/50 backdrop-blur-sm
                      hover:shadow-2xl hover:scale-[1.02] hover:border-green-500/50 dark:hover:border-green-400/50
                      transition-all duration-300 overflow-hidden animate-slide-up"
               style="animation-delay: 300ms">

                <div class="absolute inset-0 bg-gradient-to-br from-green-500/0 to-emerald-500/0 group-hover:from-green-500/5 group-hover:to-emerald-500/5 transition-all duration-500"></div>

                <div class="relative z-10">
                    <div class="flex items-start justify-between mb-6">
                        <div class="p-3 bg-gradient-to-br from-green-500 to-green-600 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                            {{ ux_icon('lucide:user', {
                                class: 'w-7 h-7 text-white'
                            }) }}
                        </div>
                    </div>

                    <h3 class="text-xl font-medium text-gray-900 dark:text-white mb-3 group-hover:text-green-600 dark:group-hover:text-green-400 transition-colors">
                        Persönliche Daten
                    </h3>
                    <p class="text-sm font-light text-gray-600 dark:text-gray-400 leading-relaxed">
                        Ändern Sie Ihren Namen, E-Mail-Adresse und Kontaktdetails.
                    </p>

                    <div class="mt-6 flex items-center text-green-600 dark:text-green-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <span class="text-sm font-medium">Bearbeiten</span>
                        {{ ux_icon('lucide:arrow-right', {
                            class: 'w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform'
                        }) }}
                    </div>
                </div>
            </a>

            {# Aktivitätsprotokoll Karte #}
            <a href="#"
               class="group relative block p-8 rounded-3xl shadow-xl border border-gray-200/50 dark:border-gray-700/50
                      bg-white/80 dark:bg-gray-800/50 backdrop-blur-sm
                      hover:shadow-2xl hover:scale-[1.02] hover:border-indigo-500/50 dark:hover:border-indigo-400/50
                      transition-all duration-300 overflow-hidden animate-slide-up"
               style="animation-delay: 400ms">

                <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/0 to-blue-500/0 group-hover:from-indigo-500/5 group-hover:to-blue-500/5 transition-all duration-500"></div>

                <div class="relative z-10">
                    <div class="flex items-start justify-between mb-6">
                        <div class="p-3 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-2xl shadow-lg group-hover:shadow-xl transition-shadow duration-300">
                            {{ ux_icon('lucide:file-text', {
                                class: 'w-7 h-7 text-white'
                            }) }}
                        </div>
                    </div>

                    <h3 class="text-xl font-medium text-gray-900 dark:text-white mb-3 group-hover:text-indigo-600 dark:group-hover:text-indigo-400 transition-colors">
                        Aktivitätsprotokoll
                    </h3>
                    <p class="text-sm font-light text-gray-600 dark:text-gray-400 leading-relaxed">
                        Übersicht der letzten Anmeldungen und kritischen Aktionen.
                    </p>

                    <div class="mt-6 flex items-center text-indigo-600 dark:text-indigo-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <span class="text-sm font-medium">Anzeigen</span>
                        {{ ux_icon('lucide:arrow-right', {
                            class: 'w-4 h-4 ml-2 transform group-hover:translate-x-1 transition-transform'
                        }) }}
                    </div>
                </div>
            </a>

        </div>
    </div>

    {# CSS für Animationen #}
    <style>
        @keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @keyframes slide-up {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fade-in 0.6s ease-out;
        }

        .animate-slide-up {
            animation: slide-up 0.8s ease-out both;
        }

        /* Shimmer effect on hover */
        .group:hover::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: linear-gradient(
                45deg,
                transparent 30%,
                rgba(255, 255, 255, 0.1) 50%,
                transparent 70%
            );
            transform: rotate(45deg) translateX(-100%);
            transition: transform 1s;
            transform: rotate(45deg) translateX(100%);
        }
    </style>
{% endblock %}
