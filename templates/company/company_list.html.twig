<turbo-frame id="companies-table">
    <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-xl rounded-3xl border border-gray-200/50 dark:border-gray-700/50 shadow-xl overflow-hidden">
        {# Suchfilter-Bereich #}
        <div class="px-6 py-4 border-b border-gray-200/50 dark:border-gray-700/50">
            <div class="flex flex-col sm:flex-row justify-between items-center space-y-3 sm:space-y-0">
                <h2 class="text-lg font-medium text-gray-900 dark:text-white">Firmenliste</h2>
                <div class="relative">
                    <input type="text" placeholder="Suchen..."
                           class="w-64 bg-gray-50 dark:bg-gray-700/50 border border-gray-200 dark:border-gray-600 rounded-xl text-gray-900 dark:text-white pl-10 pr-4 py-2 focus:outline-none focus:ring-2 focus:ring-slate-500/50 dark:focus:ring-slate-400/50 focus:border-transparent focus:bg-white dark:focus:bg-gray-800/80 transition-all duration-200">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                        {{ ux_icon('lucide:search', { class: 'h-5 w-5 text-gray-400 dark:text-gray-500' }) }}
                    </div>
                </div>
            </div>
        </div>

        {# Tabelle #}
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50/80 dark:bg-gray-800/80">
                <tr>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                        Firma
                    </th>
                    <th class="px-6 py-4 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                        Kontakte
                    </th>
                    <th class="px-6 py-4 text-right text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">
                        Aktionen
                    </th>
                </tr>
                </thead>
                <tbody class="divide-y divide-gray-200/50 dark:divide-gray-700/50">

                {% for company in companies %}
                    <tr class="hover:bg-gray-50/50 dark:hover:bg-gray-700/30 transition-colors duration-200">
                        <td class="px-6 py-4 align-top">
                            <div class="flex items-center space-x-4">
                                <div class="h-10 w-10 bg-gradient-to-br from-gray-200 to-gray-300 dark:from-gray-600 dark:to-gray-700 rounded-full flex items-center justify-center shadow-inner overflow-hidden flex-shrink-0">
                                    {% if company.logo is defined and company.logo %}
                                        <img src="{{ company.logo }}" alt="{{ company.company }}" class="h-full w-full object-cover">
                                    {% else %}
                                        <span class="text-sm font-medium text-gray-600 dark:text-gray-300">
                                            {{ company.company|slice(0, 2)|upper }}
                                        </span>
                                    {% endif %}
                                </div>
                                <div>
                                    <div class="text-sm font-medium text-gray-900 dark:text-white">{{ company.company }}</div>
                                    {% if company.address is defined and company.address is not null %}
                                        <div class="text-xs text-gray-500 dark:text-gray-400">
                                            {{ company.address.street }}, {{ company.address.zip }} {{ company.address.city }}
                                        </div>
                                    {% endif %}
                                </div>
                            </div>
                        </td>

                        <td class="px-6 py-4 align-top">
                            <div class="flex flex-col space-y-2">
                                {% if company.contacts|length > 0 %}
                                    {% for contact in company.contacts|slice(0, 2) %}
                                        <div class="text-sm">
                                            <div class="font-medium text-gray-900 dark:text-white">
                                                {{ contact.firstName }} {{ contact.lastName }}
                                            </div>
                                            {% if contact.email %}
                                                <a href="mailto:{{ contact.email }}" class="text-xs text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300">
                                                    {{ contact.email }}
                                                </a>
                                            {% endif %}
                                        </div>
                                    {% endfor %}
                                    {% if company.contacts|length > 2 %}
                                        <div class="text-xs text-gray-500 dark:text-gray-400">
                                            +{{ company.contacts|length - 2 }} weitere
                                        </div>
                                    {% endif %}
                                {% else %}
                                    <span class="text-sm text-gray-500 dark:text-gray-400 italic">Keine Kontakte</span>
                                {% endif %}
                            </div>
                        </td>

                        <td class="px-6 py-4 align-top whitespace-nowrap text-right text-sm font-medium">
                            <div class="flex justify-end space-x-2">
                                {% if is_granted("ROLE_ADMIN") %}
                                    <button data-action="click->company#openObjectInfoModal"
                                            data-company-id-param="{{ company.id }}"
                                            class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                                        {{ ux_icon('lucide:info', { class: 'h-5 w-5' }) }}
                                    </button>
                                    <button data-action="click->company#openObjectEditModal"
                                            data-company-id-param="{{ company.id }}"
                                            class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors">
                                        {{ ux_icon('lucide:edit', { class: 'h-5 w-5' }) }}
                                    </button>
                                    <button data-action="click->company#delete"
                                            data-company-id-param="{{ company.id }}"
                                            class="p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 hover:text-red-600 dark:hover:text-red-400 transition-colors">
                                        {{ ux_icon('lucide:trash-2', { class: 'h-5 w-5' }) }}
                                    </button>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        {# Pagination #}
        <div class="px-6 py-4 border-t border-gray-200/50 dark:border-gray-700/50 flex justify-between items-center">
            <div class="text-sm text-gray-600 dark:text-gray-400">
                Zeige <span class="font-medium">1</span> bis <span class="font-medium">{{ companies|length }}</span> von <span class="font-medium">{{ companies|length }}</span> Eintr√§gen
            </div>
            <div class="flex space-x-2">
                <button class="px-4 py-2 rounded-xl bg-gray-50 dark:bg-gray-700/50 text-gray-500 dark:text-gray-400 border border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors disabled:opacity-50" disabled>
                    {{ ux_icon('lucide:chevron-left', { class: 'h-4 w-4' }) }}
                </button>
                <button class="px-4 py-2 rounded-xl bg-gray-50 dark:bg-gray-700/50 text-gray-500 dark:text-gray-400 border border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors disabled:opacity-50" disabled>
                    {{ ux_icon('lucide:chevron-right', { class: 'h-4 w-4' }) }}
                </button>
            </div>
        </div>
    </div>
</turbo-frame>
