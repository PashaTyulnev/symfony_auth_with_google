{% extends 'base.html.twig' %}

{% block title %}WachZeit - Mitarbeiterverwaltung{% endblock %}

{% block body %}

    <div class="flex h-screen bg-gray-50 dark:bg-gray-900 overflow-hidden " data-controller="employee">
        {% include 'employee/newEmployeeModal.html.twig' %}
        {# Hauptinhalt #}
        <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50/80 dark:bg-gray-900/80 backdrop-blur-sm">
            <div class="container mx-auto px-6 py-8">

                {# Header mit Titel und Button #}
                <div class="mb-8">
                    <div class="flex justify-between items-center">
                        <h1 class="text-3xl font-light text-gray-900 dark:text-white tracking-tight">Mitarbeiterverwaltung</h1>
                        <!-- Modal toggle -->
                        <button data-modal-target="employeeFormModal" data-modal-toggle="employeeFormModal"
                                class="app-button">
                            {{ ux_icon('lucide:user-plus', { class: 'w-5 h-5' }) }}
                            <span>Neuer Mitarbeiter</span>
                        </button>
                    </div>
                </div>

                {# Mitarbeiterliste #}
                <div data-employee-target="employeeListContainer">
                </div>
            </div>
        </main>
    </div>

    {# Modal Animation Styles #}
    <style>
        @keyframes modal-enter {
            from {
                opacity: 0;
                transform: scale(0.95) translateY(10px);
            }
            to {
                opacity: 1;
                transform: scale(1) translateY(0);
            }
        }

        @keyframes bounce-in {
            0% {
                opacity: 0;
                transform: scale(0.3);
            }
            50% {
                transform: scale(1.05);
            }
            70% {
                transform: scale(0.9);
            }
            100% {
                opacity: 1;
                transform: scale(1);
            }
        }

        .animate-modal-enter {
            animation: modal-enter 0.4s ease-out;
        }

        .animate-bounce-in {
            animation: bounce-in 0.6s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        }
    </style>

    {# JavaScript für Modal-Funktionalität #}

{% endblock %}
