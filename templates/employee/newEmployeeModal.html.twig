{# Formular-Modal zum Anlegen neuer Mitarbeiter #}
<div id="employeeFormModal" tabindex="-1" aria-hidden="true"
     class="fixed inset-0 bg-gray-900/50 backdrop-blur-sm z-100 flex items-center justify-center px-4 py-6 hidden ">
    <div
        class="relative max-w-3xl w-full bg-white/95 dark:bg-gray-900/95 backdrop-blur-xl rounded-3xl shadow-2xl border border-gray-200/50 dark:border-gray-700/50 transform transition-all animate-modal-enter">
        {# Close Button #}
        <button data-modal-hide="employeeFormModal" id="closeFormButton"
                class="absolute top-6 right-6 text-gray-400 dark:text-gray-500 hover:text-gray-600 dark:hover:text-gray-300 transition-all duration-200 p-2 hover:bg-gray-100/50 dark:hover:bg-gray-800/50 rounded-xl">
            {{ ux_icon('lucide:x', { class: 'h-5 w-5' }) }}
        </button>

        <div class="px-8 py-10">
            <div class="text-center mb-8 animate-bounce-in">
                <div
                    class="mx-auto h-20 w-20 flex items-center justify-center rounded-3xl bg-gradient-to-br from-slate-100 to-gray-200 dark:from-gray-700 dark:to-gray-800 shadow-inner">
                    {{ ux_icon('lucide:user-plus', { class: 'h-11 w-11 text-slate-700 dark:text-gray-300' }) }}
                </div>
            </div>

            <h2 class="text-2xl font-light text-gray-900 dark:text-white mb-6 text-center">Mitarbeiter hinzufügen</h2>

            <div data-employee-target="errorMessageContainer" id="errorMessageContainer"
                 class="flex items-center p-4 mb-4 text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" hidden
                 role="alert">
                <svg class="shrink-0 w-4 h-4" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor"
                     viewBox="0 0 20 20">
                    <path
                        d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                </svg>
                <span class="sr-only">Info</span>
                <div class="ms-3 text-sm font-medium" data-employee-target="errorMessage">

                </div>
                <button type="button"
                        class="ms-auto -mx-1.5 -my-1.5 bg-red-50 text-red-500 rounded-lg focus:ring-2 focus:ring-red-400 p-1.5 hover:bg-red-200 inline-flex items-center justify-center h-8 w-8 dark:bg-gray-800 dark:text-red-400 dark:hover:bg-gray-700"
                        data-dismiss-target="#errorMessageContainer" aria-label="Close">
                    <span class="sr-only">Close</span>
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
                         viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                </button>
            </div>

            <form data-action="submit->employee#createNew">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                    {# Vorname #}
                    {% include 'elements/input.html.twig' with {'devValue':'hzimmer'     ,'title':'Benutzername', 'type': 'text', 'systemName':'username', 'placeholder': 'aschmidt', 'required' : 'required'} %}

                    {% include 'elements/select.html.twig' with {
                        'systemName': 'department',
                        'title': 'Abteilung',
                        'options': departments | map(d => {
                            'value': d.shortTitle,
                            'label': d.title
                        }),
                        'defaultOption': 'Bitte wählen...',
                        'required': 'required',
                        'devValue': currentDepartment|default('')
                    } %}

                    {% include 'elements/input.html.twig' with {'devValue':'123432'      ,'title':'Personalnummer', 'type': 'text', 'systemName':'number', 'placeholder': '123456', 'required' : 'required'} %}
                    {% include 'elements/input.html.twig' with {'devValue':'Hans'        ,'title':'Vorname', 'type': 'text', 'systemName':'firstName', 'placeholder': 'Alexander', 'required' : 'required'} %}
                    {% include 'elements/input.html.twig' with {'devValue':'Zimmer'      ,'title':'Nachname',  'type': 'text', 'systemName':'lastName', 'placeholder': 'Schmidt', 'required' : 'required'} %}
                    {% include 'elements/input.html.twig' with {'devValue':'1990-06-06'  ,'title':'Geburtsdatum',  'type': 'date', 'systemName':'birthDate', 'placeholder': '25.06.1990', 'required' : 'required'} %}
                    {% include 'elements/input.html.twig' with {'devValue':'017670584546','title':'Telefon',  'type': 'text', 'systemName':'phone', 'placeholder': '017685412456', 'required' : 'required'} %}
                    {% include 'elements/input.html.twig' with {'devValue':'test@mail.de','title':'E-Mail',  'type': 'email', 'systemName':'email', 'placeholder': 'max@gmail.com', 'required' : 'required'} %}

                </div>

                <div class="flex justify-end space-x-4">
                    <button type="button" id="cancelButton" data-modal-hide="employeeFormModal"
                            class="px-6 py-3.5 rounded-xl border border-gray-200 dark:border-gray-700 text-gray-700 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-800 transition-all duration-200">
                        Abbrechen
                    </button>
                    <button type="submit"
                            class="px-6 py-3.5 rounded-xl bg-gradient-to-r from-slate-800 to-slate-900 dark:from-white dark:to-gray-100 text-white dark:text-gray-900 font-medium hover:shadow-lg transform hover:scale-[1.02] transition-all duration-200">
                        Mitarbeiter speichern
                    </button>
                </div>
            </form>
        </div>

        {# Bottom Decoration #}
        <div
            class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-transparent via-slate-200 dark:via-gray-700 to-transparent"></div>
    </div>
</div>
