<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <style>
        @page {
            size: A4 landscape;
            margin: 6mm;
        }

        body {
            font-family: 'DejaVu Sans', sans-serif;
            font-size: 6pt;
            color: #000;
            margin: 0;
            padding: 0;
        }

        .header {
            text-align: center;
            margin-bottom: 5px;
            padding-bottom: 4px;
            border-bottom: 1px solid #000;
        }

        .header h1 {
            margin: 0;
            font-size: 12pt;
        }

        .schedule-grid {
            width: 100%;
            border-collapse: collapse;
            table-layout: fixed;
        }

        .schedule-grid td, .schedule-grid th {
            border: 1px solid #aaa;
            padding: 0;
            margin: 0;
            height: 15px;
        }

        .header-cell {
            background-color: #f2f2f2;
            text-align: center;
            font-weight: bold;
            font-size: 5pt;
        }

        .employee-cell {
            background-color: #fafafa;
            font-weight: bold;
            width: 55px;
            font-size: 5pt;
            text-align: left;
            padding-left: 2px;
        }

        .day-cell {
            text-align: center;
            font-size: 5pt;
            padding: 0;
            margin: 0;
        }

        .shift-box {
            color: #fff;
            padding: 0;
            margin: 0;
            font-weight: bold;
            font-size: 5pt;
            line-height: 1.0;
        }

        .today {
            background-color: #d8edff;
        }
    </style>
</head>

<body>
<div class="header">
    <h1>Objektdienstplan von {{ dateFrom}} bis {{ dateTo }}</h1>
</div>

<table class="schedule-grid">
    <tr>
        <th class="header-cell employee-cell">MA</th>
        {% for day in datesRange %}
            <th class="header-cell {% if day.isToday %}today{% endif %}">
                {{ day.date|date('d') }}
            </th>
        {% endfor %}
    </tr>

    {% for employee in employees %}
        <tr>
            <td class="employee-cell">
                {{ employee.firstName|slice(0,1) }}. {{ employee.lastName|slice(0,8) }}
            </td>

            {% for day in datesRange %}
                <td class="day-cell">
                    {% for shift in shifts %}
                        {% if shift.date|date('Y-m-d') == day.date|date('Y-m-d') and shift.employee == employee['@id'] %}
                            <div class="shift-box" style="background-color: {{ shift.demandShift.color }};">
                                {{ shift.demandShift.timeFrom|date('H') }}-{{ shift.demandShift.timeTo|date('H') }}
                                {{ shift.demandShift.facility.shortTitle }}
                            </div>
                        {% endif %}
                    {% endfor %}
                </td>
            {% endfor %}
        </tr>
    {% endfor %}
</table>

</body>
</html>
